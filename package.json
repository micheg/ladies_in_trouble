{
    "name": "phaser3_lady_in_trouble",
    "version": "1.0.0",
    "description": "A simple game with phaserjs for kaios",
    "scripts": {
        "setup": "parcel build src/index.html -d www",
        "dev": "parcel src/index.dev.html -p 8080 -d www",
        "app": "parcel build src/index.html -d www --no-source-maps && npx cap copy",
        "build": "parcel build src/index.html --out-dir www --no-source-maps",
        "apk_debug": "npm run build && npx cap copy && cd android && ./gradlew assembleDebug && cd ..",
        "apk_release": "npm run build && npx cap copy && cd android && ./gradlew assembleRelease && cd ..",
        "run_android": "npm run build && npx cap run android",
        "DS_Store_Clean": "find . -name \".DS_Store\" -delete"
    },
    "author": "micheg",
    "keywords": [
        "phaser",
        "phaser3",
        "phaser-game"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/micheg/ladies"
    },
    "homepage": "kaios.michelangelog.com",
    "devDependencies": {
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-clean-easy": "^1.0.2",
        "parcel-plugin-html-externals": "^0.3.0",
        "parcel-plugin-static-files-copy": "^2.6.0",
        "phaser3-rex-plugins": "^1.1.46"
    },
    "dependencies": {
        "@capacitor/android": "^3.0.1",
        "@capacitor/app": "^1.1.1",
        "@capacitor/cli": "^3.0.1",
        "@capacitor/core": "^3.0.1",
        "phaser": "^3.55.2"
    },
    "parcelCleanPaths": [
        "dist",
        "www"
    ],
    "staticFiles": {
        "staticPath": [
            {
                "staticPath": "src/assets",
                "watcherGlob": "**"
            },
            {
                "staticPath": "src/build",
                "watcherGlob": "**",
                "staticOutDir": "build"
            }
        ]
    },
    "externals": {
        "build/**/*": false
    }
}
